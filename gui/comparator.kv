

<SelectableRow@BoxLayout>:
     canvas.before:
          Color:
               rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
          Rectangle:
               size: self.size
               pos: self.pos
     # value: ''
     text:  'No text'
     Label:
          text: root.text

<MyRecycleView>:
     viewclass: 'SelectableRow'
     rgrid: rgrid
     SelectableRecycleGridLayout:
          id: rgrid
          cols: 1
          default_size: None, dp(56)
          default_size_hint: 1, None
          size_hint_y: None
          height: self.minimum_height
          orientation: 'vertical'
          spacing: dp(2)
          multiselect: True

<ComparatorContentOne@BoxLayout>:
     orientation: 'horizontal'
     BoxLayout:
          size_hint_x: 0.4
          orientation: 'vertical'
          Label:
               text: 'Available Data'
               size_hint_y : 0.1
          MyRecycleView:
               id: available_list
               data: root.popup.available_tests
          Button:
               text: 'Exit'
               size_hint_y: 0.1
               on_release: root.popup.dismiss()
     BoxLayout:
          size_hint_x: 0.2
          orientation: 'vertical'
          Widget:
               size_hint_y: 0.4
          Button:
               text: '>'
               size_hint_y: 0.1
          Button:
               text: '<'
               size_hint_y: 0.1
          Widget:
               size_hint_y: 0.4

     BoxLayout:
          size_hint_x: 0.4
          orientation: 'vertical'
          Label:
               text: 'Selected Data'
               size_hint_y : 0.1
          MyRecycleView:
               id: selected_list
          Button:
               text: 'Done'
               size_hint_y: 0.1

<Comparator@Popup>
     size_hint: 0.8, 0.8
     title: 'Cell Comparison Tool'
