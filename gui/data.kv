
#: import filechooser gui.filechooser
<Root@FloatLayout>:
     id: layout

     ActionBar:
          pos_hint: {'top':1}
          ActionView:
               use_separator: True
               ActionPrevious:
                    title: 'Action Bar'
                    with_previous: False
               ActionOverflow:
               ActionGroup:
                    text: 'Load'
                    mode: 'spinner'
                    dropdown_width: 100
                    ActionButton:
                         text: 'From File'
                         on_release: dialog = filechooser.FileDialog(app.load_data_file); dialog.load_file(configuration.parser['settings']['data_location'])
                    ActionButton:
                         text: 'From Excel'
                         on_release: app.load_active_workbook()
               ActionButton:
                    text: 'Clear All'
                    on_release: app.remove_all_tabs()
               ActionGroup:
                    text: 'View'
                    mode: 'spinner'
                    ActionButton:
                         text: 'Excel Data'

     BoxLayout:
          orientation: 'vertical'
          size_hint: 1,0.9
          pos: 0,0
          MenuBar:
               id: menubar
               size_hint_y: .2
          PlotTabbedPanel:
               id: PlotPanel
          BoxLayout:
               size_hint_y: 0.1
               id: nav_bar

