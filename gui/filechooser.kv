
<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        TextInput:
            multiline: False
            text: 'Search'
            size_hint_y: None
            height: 30
            on_text_validate: filechooser.filters = ['*{}*'.format(self.text)]
        FileChooserListView:
            id: filechooser
            filter_dirs: True
            on_submit: root.load(self.path, self.selection)
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)
